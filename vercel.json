{
  "crons": [
    {
      "path": "/api/show/send-reminder",
      "schedule": "0 9 * * *"
    }
  ],
  "redirects": [
    { "source": "/photo", "destination": "/about", "permanent": true },
    { "source": "/photo/", "destination": "/about/", "permanent": true },
    { "source": "/news", "destination": "/blog", "permanent": true },
    { "source": "/news/", "destination": "/blog/", "permanent": true }
  ],
  "headers": [
    {
      "source": "/fonts/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/_astro/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
