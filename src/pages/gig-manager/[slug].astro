---
export const prerender = false;

import BaseLayout from '../../layouts/BaseLayout.astro';
import { sanityClient } from '../../lib/sanity';

const { slug } = Astro.params;

// Auth check via query param
const url = new URL(Astro.request.url);
const authKey = url.searchParams.get('key');
if (authKey !== import.meta.env.CRON_SECRET) {
  return new Response('Unauthorized', { status: 401 });
}

const show = await sanityClient.fetch(`
  *[_type == "show" && slug.current == $slug][0] {
    _id,
    title,
    city,
    startDateTime,
    guestbookEntries[] { _key, name, email, message, approved, submittedAt },
    guestPhotos[] { _key, image, uploadedBy, message, approved, uploadedAt }
  }
`, { slug });

if (!show) {
  return Astro.redirect('/404');
}

const entries = show.guestbookEntries || [];
const photos = show.guestPhotos || [];

// Sanity image URL helper
function getImageUrl(ref: string) {
  if (!ref) return '';
  return `https://cdn.sanity.io/images/q407odag/production/${ref.replace('image-', '').replace('-jpg', '.jpg').replace('-png', '.png').replace('-webp', '.webp').replace('-jpeg', '.jpeg')}`;
}
---

<BaseLayout
  title={`Beheer — ${show.title}`}
  description="Gig Manager"
  noIndex={true}
>
  <section class="py-12 sm:py-16">
    <div class="mx-auto max-w-[900px] px-4 sm:px-6">

      {/* Header */}
      <div class="mb-8">
        <a href={`/shows/${slug}`} class="text-sm text-[var(--fg-muted)] hover:text-[var(--color-gold)] transition-colors">&larr; Terug naar showpagina</a>
        <h1 class="font-[var(--font-display)] text-2xl sm:text-3xl text-[var(--fg)] mt-3">{show.title}</h1>
        <p class="text-[var(--fg-muted)] mt-1">Gastenboek beheren &middot; {entries.length} berichten &middot; {photos.length} foto's</p>
      </div>

      {/* Berichten */}
      <div class="mb-12">
        <h2 class="text-lg font-semibold text-[var(--fg)] mb-4 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7.5 8.25h9m-9 3H12m-9.75 1.51c0 1.6 1.123 2.994 2.707 3.227 1.129.166 2.27.293 3.423.379.35.026.67.21.865.501L12 21l2.755-4.133a1.14 1.14 0 0 1 .865-.501 48.172 48.172 0 0 0 3.423-.379c1.584-.233 2.707-1.626 2.707-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0 0 12 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018Z" />
          </svg>
          Berichten ({entries.length})
        </h2>

        {entries.length === 0 ? (
          <p class="text-[var(--fg-muted)] text-sm italic">Nog geen berichten</p>
        ) : (
          <div class="space-y-2">
            {entries.map((entry: any) => (
              <div
                class="flex items-start gap-3 p-3 rounded-xl border group transition-colors"
                style="background-color: var(--bg); border-color: color-mix(in srgb, var(--fg-muted) 15%, transparent);"
                data-type="guestbook"
                data-key={entry._key}
              >
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-1">
                    <span class="text-sm font-medium text-[var(--color-gold)]">{entry.name}</span>
                    {entry.email && <span class="text-xs text-[var(--fg-muted)]">{entry.email}</span>}
                    <span class="text-xs text-[var(--fg-muted)] ml-auto whitespace-nowrap">
                      {new Date(entry.submittedAt).toLocaleTimeString('nl-NL', { hour: '2-digit', minute: '2-digit' })}
                    </span>
                  </div>
                  <p class="text-sm text-[var(--fg)] leading-relaxed">{entry.message}</p>
                </div>
                <button
                  type="button"
                  class="delete-btn shrink-0 p-2 rounded-lg text-[var(--fg-muted)] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-950 transition-colors opacity-50 group-hover:opacity-100"
                  data-show-id={show._id}
                  data-type="guestbook"
                  data-key={entry._key}
                  title="Verwijder bericht"
                >
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                  </svg>
                </button>
              </div>
            ))}
          </div>
        )}
      </div>

      {/* Foto's */}
      <div class="mb-12">
        <h2 class="text-lg font-semibold text-[var(--fg)] mb-4 flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0Z" />
          </svg>
          Foto's ({photos.length})
        </h2>

        {photos.length === 0 ? (
          <p class="text-[var(--fg-muted)] text-sm italic">Nog geen foto's</p>
        ) : (
          <div class="space-y-2">
            {photos.map((photo: any) => {
              const imgUrl = photo.image?.asset?._ref ? getImageUrl(photo.image.asset._ref) : '';
              return (
                <div
                  class="flex items-center gap-3 p-3 rounded-xl border group transition-colors"
                  style="background-color: var(--bg); border-color: color-mix(in srgb, var(--fg-muted) 15%, transparent);"
                  data-type="photo"
                  data-key={photo._key}
                >
                  {/* Thumbnail */}
                  {imgUrl && (
                    <div class="shrink-0 w-12 h-12 rounded-lg overflow-hidden">
                      <img src={`${imgUrl}?w=96&h=96&fit=crop&q=60`} alt="" class="w-full h-full object-cover" loading="lazy" />
                    </div>
                  )}

                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-0.5">
                      <span class="text-sm font-medium text-[var(--color-gold)]">{photo.uploadedBy || 'Anoniem'}</span>
                      {photo.message && <span class="text-xs text-[var(--fg-muted)] px-1.5 py-0.5 rounded-full" style="background-color: color-mix(in srgb, var(--color-gold) 15%, transparent);">+ bericht</span>}
                      <span class="text-xs text-[var(--fg-muted)] ml-auto whitespace-nowrap">
                        {photo.uploadedAt ? new Date(photo.uploadedAt).toLocaleTimeString('nl-NL', { hour: '2-digit', minute: '2-digit' }) : '—'}
                      </span>
                    </div>
                    {photo.message && (
                      <p class="text-xs text-[var(--fg-muted)] truncate">{photo.message}</p>
                    )}
                  </div>

                  <button
                    type="button"
                    class="delete-btn shrink-0 p-2 rounded-lg text-[var(--fg-muted)] hover:text-red-500 hover:bg-red-50 dark:hover:bg-red-950 transition-colors opacity-50 group-hover:opacity-100"
                    data-show-id={show._id}
                    data-type="photo"
                    data-key={photo._key}
                    title="Verwijder foto"
                  >
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                    </svg>
                  </button>
                </div>
              );
            })}
          </div>
        )}
      </div>

    </div>
  </section>

  <script define:vars={{ apiKey: import.meta.env.CRON_SECRET }}>
    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const button = e.currentTarget;
        const showId = button.dataset.showId;
        const type = button.dataset.type;
        const key = button.dataset.key;

        const label = type === 'photo' ? 'deze foto' : 'dit bericht';
        if (!confirm(`Weet je zeker dat je ${label} wilt verwijderen?`)) return;

        button.disabled = true;
        button.style.opacity = '0.3';

        try {
          const res = await fetch('/api/show/manage', {
            method: 'DELETE',
            headers: {
              'Content-Type': 'application/json',
              'x-api-key': apiKey,
            },
            body: JSON.stringify({ showId, type, key }),
          });

          if (!res.ok) throw new Error('Verwijderen mislukt');

          // Verwijder de rij uit de DOM
          const row = button.closest('[data-key]');
          if (row) {
            row.style.transition = 'all 300ms ease';
            row.style.opacity = '0';
            row.style.transform = 'translateX(20px)';
            setTimeout(() => row.remove(), 300);
          }
        } catch (err) {
          alert('Verwijderen mislukt: ' + err.message);
          button.disabled = false;
          button.style.opacity = '';
        }
      });
    });
  </script>
</BaseLayout>
