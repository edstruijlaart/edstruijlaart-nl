---
/**
 * SpotifyStrip â€” dark accent banner highlighting a featured track.
 * Inspired by the prototype design.
 */
interface Props {
  trackName?: string;
  stat?: string;
  spotifyUrl?: string;
}

const {
  trackName = 'Make It On Your Own',
  stat = '20M+ Streams op Spotify',
  spotifyUrl = 'https://open.spotify.com/track/2qVkAYvJhDGhRNJzCAYfnX',
} = Astro.props;
---

<section class="relative overflow-hidden" style="background-color: var(--color-dark-bg);">
  {/* Subtle gold glow */}
  <div class="absolute top-1/2 left-1/4 -translate-y-1/2 w-64 h-64 rounded-full blur-3xl opacity-5" style="background-color: var(--color-gold);"></div>

  <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8 py-8 md:py-10">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      {/* Left: Spotify icon + track info */}
      <div class="flex items-center gap-4">
        <div class="flex-shrink-0 w-12 h-12 rounded-full flex items-center justify-center" style="background-color: var(--color-spotify);">
          <svg class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
          </svg>
        </div>
        <div>
          <p class="text-white/60 text-sm uppercase tracking-wider">Meest gestreamd</p>
          <p class="text-white text-lg md:text-xl font-medium">{trackName}</p>
        </div>
      </div>

      {/* Center: stat */}
      <div class="hidden md:block">
        <p class="text-[var(--color-gold)] text-2xl font-[var(--font-display)]">{stat}</p>
      </div>

      {/* Right: CTA */}
      <a
        href={spotifyUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full text-sm font-medium text-white border border-white/20 hover:border-white/40 hover:bg-white/5 transition-all duration-300"
      >
        Luister op Spotify
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6M15 3h6v6M10 14L21 3"/>
        </svg>
      </a>
    </div>

    {/* Mobile stat */}
    <p class="md:hidden mt-3 text-center text-[var(--color-gold)] text-xl font-[var(--font-display)]">{stat}</p>
  </div>
</section>
