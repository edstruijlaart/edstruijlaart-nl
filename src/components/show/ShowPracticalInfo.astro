---
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  city: string;
  startDateTime: string;
  practicalInfo?: string;
}

const { city, startDateTime, practicalInfo } = Astro.props;

const date = new Date(startDateTime);
const dateStr = date.toLocaleDateString('nl-NL', {
  weekday: 'long',
  day: 'numeric',
  month: 'long',
  year: 'numeric',
});
const timeStr = date.toLocaleTimeString('nl-NL', {
  hour: '2-digit',
  minute: '2-digit',
});

const defaultInfo = 'Het concert duurt ongeveer 2 uur (inclusief pauze). Neem gerust je eigen drankje mee. Het adres ontvang je voorafgaand aan het concert.';
---

<section class="py-16 sm:py-24">
  <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <SectionHeading title="Praktische informatie" />

      <div class="mt-8 grid grid-cols-1 sm:grid-cols-3 gap-6">
        <div class="text-center p-6 rounded-xl" style="background-color: var(--bg-surface); box-shadow: var(--shadow-card);">
          <svg class="w-8 h-8 mx-auto text-[var(--color-gold)] mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" />
          </svg>
          <p class="font-medium text-[var(--fg)]">{dateStr}</p>
        </div>
        <div class="text-center p-6 rounded-xl" style="background-color: var(--bg-surface); box-shadow: var(--shadow-card);">
          <svg class="w-8 h-8 mx-auto text-[var(--color-gold)] mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
          </svg>
          <p class="font-medium text-[var(--fg)]">{timeStr} uur</p>
        </div>
        <div class="text-center p-6 rounded-xl" style="background-color: var(--bg-surface); box-shadow: var(--shadow-card);">
          <svg class="w-8 h-8 mx-auto text-[var(--color-gold)] mb-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 0 1 15 0Z" />
          </svg>
          <p class="font-medium text-[var(--fg)]">{city}</p>
        </div>
      </div>

      <p class="mt-8 text-base text-[var(--fg-muted)] leading-relaxed text-center">
        {practicalInfo || defaultInfo}
      </p>
    </div>
  </div>
</section>
