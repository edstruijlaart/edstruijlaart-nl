---
import SectionHeading from '../ui/SectionHeading.astro';

interface Props {
  entries: Array<{ name: string; message: string; submittedAt: string }>;
  photos?: Array<{ image: any; uploadedBy: string; uploadedAt?: string }>;
  showId: string;
}

const { entries, photos = [], showId } = Astro.props;

// Combineer berichten en foto's in een tijdlijn
type TimelineItem =
  | { type: 'message'; name: string; message: string; time: string }
  | { type: 'photo'; uploadedBy: string; imageRef: string; time: string };

const timeline: TimelineItem[] = [];

for (const entry of entries) {
  timeline.push({
    type: 'message',
    name: entry.name,
    message: entry.message,
    time: entry.submittedAt,
  });
}

for (const photo of photos) {
  if (photo.image?.asset?._ref) {
    const ref = photo.image.asset._ref;
    const url = `https://cdn.sanity.io/images/q407odag/production/${ref.replace('image-', '').replace('-jpg', '.jpg').replace('-png', '.png').replace('-webp', '.webp').replace('-jpeg', '.jpeg')}`;
    timeline.push({
      type: 'photo',
      uploadedBy: photo.uploadedBy || 'Anoniem',
      imageRef: url,
      time: photo.uploadedAt || new Date().toISOString(),
    });
  }
}

// Sorteer op tijd (nieuwste bovenaan)
timeline.sort((a, b) => new Date(b.time).getTime() - new Date(a.time).getTime());
---

<section class="py-16 sm:py-24" style="background-color: var(--bg-surface);">
  <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">

    {/* Header */}
    <div class="text-center mb-10">
      <h2 class="font-[var(--font-display)] text-3xl sm:text-4xl text-[var(--fg)] mb-2">Gastenboek</h2>
      <div class="w-12 h-0.5 mx-auto mt-3 mb-4" style="background-color: var(--color-gold);"></div>
      <p class="text-[var(--fg-muted)]">
        {timeline.length > 0
          ? `${timeline.length} herinnering${timeline.length === 1 ? '' : 'en'} van vanavond`
          : 'Deel je mooiste moment van vanavond'}
      </p>
    </div>

    {/* Formulier — bericht + foto in één */}
    <div class="max-w-xl mx-auto mb-14">
      <form id="guestbook-combined-form" class="space-y-4" data-show-id={showId}>
        <input
          type="text"
          name="name"
          placeholder="Je naam"
          required
          class="w-full px-4 py-3 rounded-xl border text-[var(--fg)]"
          style="background-color: var(--bg); border-color: color-mix(in srgb, var(--fg-muted) 30%, transparent);"
        />
        <textarea
          name="message"
          placeholder="Wat vond je van vanavond? ✨"
          maxlength="280"
          rows="2"
          class="w-full px-4 py-3 rounded-xl border text-[var(--fg)] resize-none"
          style="background-color: var(--bg); border-color: color-mix(in srgb, var(--fg-muted) 30%, transparent);"
        ></textarea>

        {/* Foto toevoegen — compact inline */}
        <div class="flex items-center gap-3">
          <label
            class="flex items-center gap-2 px-4 py-2.5 rounded-full border cursor-pointer transition-all duration-200 hover:border-[var(--color-gold)] hover:text-[var(--color-gold)]"
            style="border-color: color-mix(in srgb, var(--fg-muted) 30%, transparent);"
          >
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0Z" />
            </svg>
            <span class="text-sm text-[var(--fg-muted)]" id="photo-label">Voeg foto toe</span>
            <input type="file" name="photo" accept="image/*" class="hidden" id="photo-input" />
          </label>
          <div id="photo-preview" class="hidden">
            <div class="relative w-12 h-12 rounded-lg overflow-hidden">
              <img id="photo-thumb" src="" alt="Preview" class="w-full h-full object-cover" />
              <button type="button" id="photo-remove" class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 text-white rounded-full text-xs flex items-center justify-center leading-none">&times;</button>
            </div>
          </div>
        </div>

        <p id="gb-status" class="text-sm hidden"></p>

        <button
          type="submit"
          id="gb-submit"
          class="w-full px-6 py-3.5 rounded-full text-white font-medium transition-all duration-300 hover:scale-[1.02] active:scale-[0.98]"
          style="background-color: var(--color-gold);"
        >
          Delen
        </button>
      </form>
    </div>

    {/* Tijdlijn — berichten en foto's gemixed */}
    {timeline.length > 0 && (
      <div class="max-w-3xl mx-auto space-y-4" id="timeline">
        {timeline.map(item => (
          item.type === 'message' ? (
            <div class="p-5 rounded-2xl transition-all duration-200 hover:translate-y-[-2px]" style="background-color: var(--bg); box-shadow: 0 2px 12px rgba(0,0,0,0.06);">
              <p class="text-base text-[var(--fg)] leading-relaxed">{item.message}</p>
              <div class="mt-3 flex items-center gap-2">
                <div class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-medium text-white" style="background-color: var(--color-gold);">
                  {item.name.charAt(0).toUpperCase()}
                </div>
                <span class="text-sm font-medium text-[var(--color-gold)]">{item.name}</span>
                <span class="text-xs text-[var(--fg-muted)] ml-auto">
                  {new Date(item.time).toLocaleTimeString('nl-NL', { hour: '2-digit', minute: '2-digit' })}
                </span>
              </div>
            </div>
          ) : (
            <div class="rounded-2xl overflow-hidden transition-all duration-200 hover:translate-y-[-2px]" style="box-shadow: 0 2px 12px rgba(0,0,0,0.06);">
              <img
                src={`${item.imageRef}?w=800&q=80`}
                alt={`Foto door ${item.uploadedBy}`}
                class="w-full max-h-[500px] object-cover"
                loading="lazy"
              />
              <div class="p-4 flex items-center gap-2" style="background-color: var(--bg);">
                <div class="w-6 h-6 rounded-full flex items-center justify-center text-xs font-medium text-white" style="background-color: var(--color-gold);">
                  {item.uploadedBy.charAt(0).toUpperCase()}
                </div>
                <span class="text-sm font-medium text-[var(--color-gold)]">{item.uploadedBy}</span>
                <span class="text-xs text-[var(--fg-muted)] ml-auto">
                  {new Date(item.time).toLocaleTimeString('nl-NL', { hour: '2-digit', minute: '2-digit' })}
                </span>
              </div>
            </div>
          )
        ))}
      </div>
    )}
  </div>
</section>

<script>
  const form = document.getElementById('guestbook-combined-form') as HTMLFormElement;
  const photoInput = document.getElementById('photo-input') as HTMLInputElement;
  const photoLabel = document.getElementById('photo-label');
  const photoPreview = document.getElementById('photo-preview');
  const photoThumb = document.getElementById('photo-thumb') as HTMLImageElement;
  const photoRemove = document.getElementById('photo-remove');
  const statusEl = document.getElementById('gb-status');
  const submitBtn = document.getElementById('gb-submit') as HTMLButtonElement;

  if (form) {
    const showId = form.dataset.showId!;

    // Auto-fill naam als bekend
    const stored = localStorage.getItem(`show-gate-${showId}`);
    if (stored) {
      try {
        const parsed = JSON.parse(stored);
        const nameInput = form.querySelector('input[name="name"]') as HTMLInputElement;
        if (nameInput && parsed.firstName) nameInput.value = parsed.firstName;
      } catch {}
    }

    // Foto preview
    photoInput?.addEventListener('change', () => {
      if (photoInput.files?.[0]) {
        const file = photoInput.files[0];
        if (file.size > 10 * 1024 * 1024) {
          showStatus('Foto is te groot (max 10MB)', 'error');
          photoInput.value = '';
          return;
        }
        const url = URL.createObjectURL(file);
        photoThumb!.src = url;
        photoPreview!.classList.remove('hidden');
        photoLabel!.textContent = file.name.slice(0, 20) + (file.name.length > 20 ? '...' : '');
      }
    });

    // Foto verwijderen
    photoRemove?.addEventListener('click', () => {
      photoInput.value = '';
      photoPreview!.classList.add('hidden');
      photoLabel!.textContent = 'Voeg foto toe';
    });

    // Submit handler
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const fd = new FormData(form);
      const name = (fd.get('name') as string)?.trim();
      const message = (fd.get('message') as string)?.trim();
      const photo = photoInput.files?.[0];

      if (!name) { showStatus('Vul je naam in', 'error'); return; }
      if (!message && !photo) { showStatus('Schrijf een bericht of voeg een foto toe', 'error'); return; }

      submitBtn.disabled = true;
      submitBtn.textContent = 'Bezig...';
      hideStatus();

      try {
        // 1. Bericht plaatsen (als er tekst is)
        if (message) {
          const res = await fetch('/api/show/guestbook', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ showId, name, message }),
          });
          if (!res.ok) throw new Error('Bericht plaatsen mislukt');
        }

        // 2. Foto uploaden (als er een foto is)
        if (photo) {
          const photoData = new FormData();
          photoData.append('showId', showId);
          photoData.append('uploadedBy', name);
          photoData.append('photo', photo);

          const res = await fetch('/api/show/photo', {
            method: 'POST',
            body: photoData,
          });
          if (!res.ok) throw new Error('Foto uploaden mislukt');
        }

        showStatus('Geplaatst! De pagina ververst zo...', 'success');

        // Reset form
        (form.querySelector('textarea') as HTMLTextAreaElement).value = '';
        photoInput.value = '';
        photoPreview!.classList.add('hidden');
        photoLabel!.textContent = 'Voeg foto toe';

        // Herlaad na korte pauze zodat Sanity tijd heeft
        setTimeout(() => window.location.reload(), 1500);

      } catch (err: any) {
        showStatus(err.message, 'error');
        submitBtn.disabled = false;
        submitBtn.textContent = 'Delen';
      }
    });
  }

  function showStatus(msg: string, type: 'success' | 'error') {
    if (!statusEl) return;
    statusEl.textContent = msg;
    statusEl.className = `text-sm ${type === 'error' ? 'text-red-500' : 'text-green-500'}`;
    statusEl.classList.remove('hidden');
  }

  function hideStatus() {
    statusEl?.classList.add('hidden');
  }
</script>
