---
import { mainNav } from '../../data/navigation';
import DarkModeToggle from '../ui/DarkModeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header
  class="sticky top-0 z-50 border-b border-[var(--bg-surface)]/60"
  style="background-color: color-mix(in srgb, var(--bg) 80%, transparent); backdrop-filter: blur(12px) saturate(1.2); -webkit-backdrop-filter: blur(12px) saturate(1.2); transition: background-color 300ms ease;"
>
  <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between lg:h-20">
      <!-- Logo -->
      <a href="/" class="font-[var(--font-display)] text-xl lg:text-2xl text-[var(--color-gold)] hover:text-[var(--color-gold-light)] transition-colors duration-300">
        Ed Struijlaart
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-6" aria-label="Hoofdnavigatie">
        {mainNav.map(item => (
          <a
            href={item.href}
            class:list={[
              'text-sm font-[var(--font-body)] font-medium uppercase tracking-wider transition-colors duration-300',
              currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                ? 'text-[var(--color-gold)]'
                : 'text-[var(--fg-muted)] hover:text-[var(--color-gold)]',
            ]}
            aria-current={currentPath === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))}
        <DarkModeToggle />
      </nav>

      <!-- Mobile -->
      <div class="flex items-center gap-2 lg:hidden">
        <DarkModeToggle />
        <button
          id="mobile-menu-btn"
          type="button"
          class="p-2 rounded-lg transition-colors duration-300 hover:bg-[var(--bg-surface)]"
          aria-label="Menu openen"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="w-6 h-6 text-[var(--fg)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="6" x2="21" y2="6"/>
            <line x1="3" y1="12" x2="21" y2="12"/>
            <line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu â€” fullscreen overlay -->
  <div
    id="mobile-menu"
    class="mobile-menu-overlay fixed inset-0 z-50 hidden lg:hidden"
    role="dialog"
    aria-modal="true"
    aria-label="Mobiel menu"
  >
    <!-- Header bar -->
    <div class="flex items-center justify-between p-4 border-b" style="background-color: var(--bg); border-color: var(--bg-surface);">
      <span class="font-[var(--font-display)] text-lg text-[var(--color-gold)]">Menu</span>
      <button
        id="mobile-menu-close"
        type="button"
        class="p-2 rounded-lg transition-colors duration-300 hover:bg-[var(--bg-surface)]"
        aria-label="Menu sluiten"
      >
        <svg class="w-6 h-6" style="color: var(--fg);" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
    </div>

    <!-- Nav links -->
    <nav class="p-6 pt-8" aria-label="Mobiele navigatie">
      <ul class="space-y-2">
        {mainNav.map(item => (
          <li>
            <a
              href={item.href}
              class:list={[
                'block px-4 py-3 rounded-lg text-lg font-medium transition-colors duration-300 text-center',
                currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                  ? 'text-[var(--color-gold)] bg-[var(--color-gold)]/10'
                  : 'hover:text-[var(--color-gold)] hover:bg-[var(--bg-surface)]',
              ]}
              style={!(currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))) ? 'color: var(--fg);' : ''}
              aria-current={currentPath === item.href ? 'page' : undefined}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .mobile-menu-overlay {
    background-color: var(--bg);
    opacity: 0;
    transition: opacity 250ms ease;
    pointer-events: none;
  }
  .mobile-menu-overlay.is-open {
    opacity: 1;
    pointer-events: auto;
  }
</style>

<script>
  function initMobileMenu() {
    const menuBtn = document.getElementById('mobile-menu-btn');
    const closeBtn = document.getElementById('mobile-menu-close');
    const menu = document.getElementById('mobile-menu');

    if (!menuBtn || !closeBtn || !menu) return;
    // Prevent double-init
    if (menuBtn.dataset.init) return;
    menuBtn.dataset.init = '1';

    function openMenu() {
      menu.classList.remove('hidden');
      requestAnimationFrame(() => {
        menu.classList.add('is-open');
      });
      menuBtn.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      menu.classList.remove('is-open');
      menuBtn.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
      setTimeout(() => {
        menu.classList.add('hidden');
      }, 250);
    }

    menuBtn.addEventListener('click', openMenu);
    closeBtn.addEventListener('click', closeMenu);

    // Close op link klik
    menu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !menu.classList.contains('hidden')) {
        closeMenu();
      }
    });
  }

  initMobileMenu();
  document.addEventListener('astro:after-swap', initMobileMenu);
</script>
