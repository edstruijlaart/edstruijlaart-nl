---
import { mainNav } from '../../data/navigation';
import { siteConfig } from '../../data/siteConfig';
import DarkModeToggle from '../ui/DarkModeToggle.astro';

const currentPath = Astro.url.pathname;
---

<header
  class="sticky top-0 z-50 border-b border-[var(--bg-surface)]"
  style="background-color: var(--bg); transition: background-color 300ms ease;"
>
  <div class="mx-auto max-w-[1200px] px-4 sm:px-6 lg:px-8">
    <div class="flex h-16 items-center justify-between lg:h-20">
      <!-- Logo -->
      <a href="/" class="font-[var(--font-display)] text-xl lg:text-2xl text-[var(--color-gold)] hover:text-[var(--color-gold-light)] transition-colors duration-300">
        Ed Struijlaart
      </a>

      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-6" aria-label="Hoofdnavigatie">
        {mainNav.map(item => (
          <a
            href={item.href}
            class:list={[
              'text-sm font-[var(--font-body)] font-medium uppercase tracking-wider transition-colors duration-300',
              currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                ? 'text-[var(--color-gold)]'
                : 'text-[var(--fg-muted)] hover:text-[var(--color-gold)]',
            ]}
            aria-current={currentPath === item.href ? 'page' : undefined}
          >
            {item.label}
          </a>
        ))}
        <!-- Social icons desktop -->
        <div class="flex items-center gap-1 ml-2 pl-2 border-l border-[var(--bg-surface)]">
          <a href={siteConfig.social.spotify} target="_blank" rel="noopener noreferrer" aria-label="Spotify" class="p-1.5 rounded-full text-[var(--fg-muted)] hover:text-[var(--color-gold)] transition-colors duration-300">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/></svg>
          </a>
          <a href={siteConfig.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="p-1.5 rounded-full text-[var(--fg-muted)] hover:text-[var(--color-gold)] transition-colors duration-300">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 1 0 0 12.324 6.162 6.162 0 0 0 0-12.324zM12 16a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm6.406-11.845a1.44 1.44 0 1 0 0 2.881 1.44 1.44 0 0 0 0-2.881z"/></svg>
          </a>
          <a href={siteConfig.social.youtube} target="_blank" rel="noopener noreferrer" aria-label="YouTube" class="p-1.5 rounded-full text-[var(--fg-muted)] hover:text-[var(--color-gold)] transition-colors duration-300">
            <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </a>
        </div>
        <DarkModeToggle />
      </nav>

      <!-- Mobile -->
      <div class="flex items-center gap-2 lg:hidden">
        <DarkModeToggle />
        <button
          id="mobile-menu-btn"
          type="button"
          class="p-2 rounded-lg transition-colors duration-300 hover:bg-[var(--bg-surface)]"
          aria-label="Menu openen"
          aria-expanded="false"
          aria-controls="mobile-menu"
        >
          <svg class="w-6 h-6 text-[var(--fg)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="3" y1="6" x2="21" y2="6"/>
            <line x1="3" y1="12" x2="21" y2="12"/>
            <line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-50 hidden lg:hidden"
    role="dialog"
    aria-modal="true"
    aria-label="Mobiel menu"
  >
    <!-- Backdrop -->
    <div class="absolute inset-0 bg-black/50" id="mobile-menu-backdrop"></div>

    <!-- Menu panel -->
    <div
      class="absolute right-0 top-0 h-full w-72 max-w-[80vw] transform translate-x-full transition-transform duration-300 ease-in-out"
      id="mobile-menu-panel"
      style="background-color: var(--bg);"
    >
      <div class="flex items-center justify-between p-4 border-b border-[var(--bg-surface)]">
        <span class="font-[var(--font-display)] text-lg text-[var(--color-gold)]">Menu</span>
        <button
          id="mobile-menu-close"
          type="button"
          class="p-2 rounded-lg transition-colors duration-300 hover:bg-[var(--bg-surface)]"
          aria-label="Menu sluiten"
        >
          <svg class="w-6 h-6 text-[var(--fg)]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>

      <nav class="p-4" aria-label="Mobiele navigatie">
        <ul class="space-y-1">
          {mainNav.map(item => (
            <li>
              <a
                href={item.href}
                class:list={[
                  'block px-4 py-3 rounded-lg text-base font-medium transition-colors duration-300',
                  currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href))
                    ? 'text-[var(--color-gold)] bg-[var(--color-gold)]/10'
                    : 'text-[var(--fg)] hover:text-[var(--color-gold)] hover:bg-[var(--bg-surface)]',
                ]}
                aria-current={currentPath === item.href ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const closeBtn = document.getElementById('mobile-menu-close');
  const backdrop = document.getElementById('mobile-menu-backdrop');
  const menu = document.getElementById('mobile-menu');
  const panel = document.getElementById('mobile-menu-panel');

  function openMenu() {
    menu?.classList.remove('hidden');
    requestAnimationFrame(() => {
      panel?.classList.remove('translate-x-full');
      panel?.classList.add('translate-x-0');
    });
    menuBtn?.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    panel?.classList.remove('translate-x-0');
    panel?.classList.add('translate-x-full');
    menuBtn?.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';
    setTimeout(() => {
      menu?.classList.add('hidden');
    }, 300);
  }

  menuBtn?.addEventListener('click', openMenu);
  closeBtn?.addEventListener('click', closeMenu);
  backdrop?.addEventListener('click', closeMenu);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !menu?.classList.contains('hidden')) {
      closeMenu();
    }
  });
</script>
