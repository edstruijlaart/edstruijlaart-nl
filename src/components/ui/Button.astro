---
interface Props {
  variant?: 'primary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  [key: string]: any;
}

const { variant = 'primary', size = 'md', href, class: className, ...rest } = Astro.props;

const baseClasses = 'inline-flex items-center justify-center font-medium transition-all duration-300 rounded-full';

const variantClasses: Record<string, string> = {
  primary: 'bg-[var(--color-gold)] text-white hover:bg-[var(--color-gold-light)] active:bg-[var(--color-gold-dark)]',
  outline: 'border-2 border-[var(--color-gold)] text-[var(--color-gold)] hover:bg-[var(--color-gold)] hover:text-white',
  ghost: 'text-[var(--color-gold)] hover:bg-[var(--color-gold)]/10',
};

const sizeClasses: Record<string, string> = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-base',
};

const classes = [baseClasses, variantClasses[variant], sizeClasses[size], className].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={classes} {...rest}>
    <slot />
  </a>
) : (
  <button class={classes} {...rest}>
    <slot />
  </button>
)}
