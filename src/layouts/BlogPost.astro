---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  date?: string;
  image?: string;
}

const { title, description, date, image } = Astro.props;
---

<BaseLayout title={title} description={description} type="article">
  <article class="py-24">
    <div class="mx-auto max-w-[800px] px-4 sm:px-6 lg:px-8">
      <header class="mb-12">
        {date && (
          <time class="text-sm text-[var(--fg-muted)]">{date}</time>
        )}
        <h1 class="mt-2 font-[var(--font-display)] text-4xl lg:text-5xl">
          {title}
        </h1>
        <div class="mt-4 h-1 w-16 rounded-full" style="background-color: var(--color-gold);"></div>
      </header>

      <div class="prose prose-lg max-w-none">
        <slot />
      </div>
    </div>
  </article>
</BaseLayout>
